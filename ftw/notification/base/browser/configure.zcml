<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    i18n_domain="ftw.notification.base">

  <browser:resourceDirectory
    name="ftw.notification.base.resources"
    directory="resources"
    />

  <browser:page
    for="*"
    name="notification_form"
    class=".notification.NotificationForm"
    permission="zope2.View"
    allowed_attributes="json_source json_source_by_group"
    />


</configure>
